<Window x:Class="kursach.BookingMemory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:kursach.View"
        Title="Подтвержденные брони" Height="500" Width="880">

    <Window.Resources>
        <vm:BookingMemoryMvvm x:Key="vm"/>
    </Window.Resources>

    <Window.DataContext>
        <StaticResource ResourceKey="vm"/>
    </Window.DataContext>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10*"/>


        </Grid.RowDefinitions>


        <StackPanel Orientation="Horizontal"  Height="20">
            <TextBlock Text="Поиск:"/>
            <TextBox Text="{Binding Search, UpdateSourceTrigger=PropertyChanged}" Width="200"/>

            <TextBlock Text="Тип номера:"/>
            <ComboBox Width="150" 
              ItemsSource="{Binding RoomTypes}" 
              SelectedItem="{Binding SelectedRoomType}" />

            <TextBlock Text="Статус:"/>
            <ComboBox Width="150" 
              ItemsSource="{Binding Statuses}" 
              SelectedItem="{Binding SelectedStatus}"/>
        </StackPanel>
            <!-- Таблица или ListView с бронированиями -->
        <ListView ItemsSource="{Binding Bookings}" SelectedItem="{Binding SelectedBooking}" Grid.Row="1">
            <!-- Пример шаблона -->
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Гость" DisplayMemberBinding="{Binding GuestFullName}" />
                    <GridViewColumn Header="Телефон" DisplayMemberBinding="{Binding GuestPhone}" />
                    <GridViewColumn Header="Номер" DisplayMemberBinding="{Binding RoomNumber}" />
                    <GridViewColumn Header="Тип номера" DisplayMemberBinding="{Binding RoomType}" />
                    <GridViewColumn Header="С датой" DisplayMemberBinding="{Binding Datestart}" />
                    <GridViewColumn Header="По дату" DisplayMemberBinding="{Binding Dateend}" />
                    <GridViewColumn Header="Статус" DisplayMemberBinding="{Binding Status}" />
                </GridView>
                
            </ListView.View>
        </ListView>
        <Button Content="Удалить бронь" HorizontalAlignment="Right"
        Command="{Binding DeleteBooking}"
        IsEnabled="{Binding SelectedBooking}"
        Width="150" Height="30" Margin="10"/>
    </Grid>
</Window>