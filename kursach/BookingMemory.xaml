<Window x:Class="kursach.BookingMemory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:kursach.View"
        Title="Подтвержденные брони" Height="500" Width="880">

    <Window.Resources>
        <vm:BookingMemoryMvvm x:Key="vm"/>

            <Style TargetType="Button">
                <Setter Property="Background" Value="#90CAF9"/>
                <Setter Property="Foreground" Value="Black"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Padding" Value="10,5"/>
                <Setter Property="Margin" Value="5"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="BorderBrush" Value="#42A5F5"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="8"
                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </Window.Resources>

    <Window.DataContext>
        <StaticResource ResourceKey="vm"/>
    </Window.DataContext>
    <Grid Background="#A0E0D5" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10*"/>


        </Grid.RowDefinitions>


        <StackPanel Orientation="Horizontal"  Height="20">
            <TextBlock Text="Поиск:"/>
            <TextBox Text="{Binding Search, UpdateSourceTrigger=PropertyChanged}" Width="200"/>

            <TextBlock Text="Тип номера:"/>
            <ComboBox Width="150" 
              ItemsSource="{Binding RoomTypes}" 
              SelectedItem="{Binding SelectedRoomType}" />

            <TextBlock Text="Статус:"/>
            <ComboBox Width="150" 
              ItemsSource="{Binding Statuses}" 
              SelectedItem="{Binding SelectedStatus}"/>
        </StackPanel>

        <DataGrid Grid.Row="1" ItemsSource="{Binding Bookings}" 
          SelectedItem="{Binding SelectedBooking}"
          AutoGenerateColumns="False"
          CanUserAddRows="False" Margin="0,10,0,0" >
            <DataGrid.Columns >
                <DataGridTextColumn Header="Гость" Binding="{Binding GuestFullName}" Width="200"/>
                <DataGridTextColumn Header="Телефон" Binding="{Binding GuestPhone}" Width="100"/>
                <DataGridTextColumn Header="Номер" Binding="{Binding RoomNumber}" Width="60"/>
                <DataGridTextColumn Header="Тип номера" Binding="{Binding RoomType}" Width="100"/>
                <DataGridTextColumn Header="Дата заезда" Binding="{Binding Datestart}" Width="100"/>
                <DataGridTextColumn Header="Дата выезда" Binding="{Binding Dateend}" Width="100"/>
                <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="100"/>
                <DataGridTextColumn Header="Стоимость" Binding="{Binding TotalPrice}" />
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Удалить бронь" HorizontalAlignment="Right"
        Command="{Binding DeleteBooking}"
        IsEnabled="{Binding SelectedBooking}"
        Width="150" Height="30" Margin="10"/>
    </Grid>
</Window>