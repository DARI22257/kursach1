<Window x:Class="kursach.Number"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:kursach"
        xmlns:mvvm="clr-namespace:kursach.View" 
        DataContext="{DynamicResource vm}"
        mc:Ignorable="d"
        Title="Number" Height="450" Width="800" Background="#88d3c6">
    <Window.Resources>
        <mvvm:NumberMvvm x:Key="vm"/>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Column="0" Margin="10" DataContext="{Binding NewNumber}" >
            <Label Content="Номер комнаты"/>
            <TextBox Text="{Binding Numberroom}"/>
            <Label Content="Тип"/>
            <TextBox Text="{Binding Type}"/>
            <Label Content="Статус"/>
            <TextBox Text="{Binding Status}"/>
            <Label Content="Цена"/>
            <TextBox Text="{Binding Price}"/>
        </StackPanel>


        <ListView Grid.Column="1" ItemsSource="{Binding Number}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Номер комнаты" DisplayMemberBinding="{Binding Numberroom}" Width="100"/>
                    <GridViewColumn Header="Тип" DisplayMemberBinding="{Binding Type}" Width="100"/>
                    <GridViewColumn Header="Статус" DisplayMemberBinding="{Binding Status}" Width="100"/>
                    <GridViewColumn Header="Цена" DisplayMemberBinding="{Binding Price}"/>
                </GridView>
            </ListView.View>

        </ListView>

        <StackPanel Grid.Column="0" Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Bottom" Margin="10">
            <Button Content="Зарегестрировать номер" Width="150" Height="40" Background="LightCyan" Command="{Binding InsertNumber}" />
        </StackPanel>

        <StackPanel Grid.Column="1" Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button Content="На главную" Width="100" Height="40" Background="LightCyan" Click="NavigateButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
