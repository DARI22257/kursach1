<Window x:Class="kursach.Booking1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:kursach"
        xmlns:mvvm="clr-namespace:kursach.View" 
        DataContext="{DynamicResource vm}"
        mc:Ignorable="d"
        Title="Booking1" Height="450" Width="800" Background="#88d3c6">
    <Window.Resources>
        <mvvm:BookingMvvm x:Key="vm"/>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Column="0" Margin="10" DataContext="{Binding NewBooking}" >
            <Label Content="Дата заеда"/>
            <TextBox Text="{Binding Datestart}"/>
            <Label Content="Дата выезда"/>
            <TextBox Text="{Binding Dateend}"/>
            <Label Content="Статус"/>
            <TextBox Text="{Binding Status}"/>
        </StackPanel>

        <StackPanel Grid.Column="0" Grid.Row="3" Orientation="Horizontal" VerticalAlignment="Bottom" Margin="10">
            <Button Content="Бронировать" Width="150" Height="40" Background="LightCyan" Command="{Binding InsertBooking}" />
        </StackPanel>

        <Label Content="Выбрать гостя" Grid.Row="1" Grid.Column="1"/>
        <ComboBox Height="30" Width="380" 
                  Grid.Row="1" Grid.Column="1" 
                  HorizontalAlignment="Center" 
                  Background="LightCyan" 
                  SelectedItem="{Binding SelectedGuest}" 
                  ItemsSource="{Binding Guests}" 
                  DisplayMemberPath="FirstName"/>
        <!-- Исправил ComboBox -->
        
        
        <StackPanel Grid.Column="1" Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button Content="На главную" Width="100" Height="40" Background="LightCyan" Click="NavigateButton_Click"/>
        </StackPanel>

        <Label Content="Выбрать номер" Grid.Row="2" Grid.Column="1"/>
        <ComboBox Height="30" Width="380"
                  Grid.Row="2" Grid.Column="1"
                  HorizontalAlignment="Center"
                  Background="LightCyan"
                  SelectedItem="{Binding SelectedRoom}"
                  ItemsSource="{Binding Number}"
                  DisplayMemberPath="Numberroom"/>
        <!-- Исправил ComboBox -->



    </Grid>
</Window>
