<Window x:Class="kursach.Number52"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:kursach"
        xmlns:mvvm="clr-namespace:kursach.View" 
        DataContext="{DynamicResource vm}"
        mc:Ignorable="d"
        Title="Number52" Height="450" Width="800">
    <Window.Resources>
        <mvvm:NumberMvvm x:Key="vm"/>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="8*" />
        </Grid.RowDefinitions>

        <ListView Grid.Row="1" ItemsSource="{Binding Number}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Номер комнаты" DisplayMemberBinding="{Binding Numberroom}" Width="100"/>
                    <GridViewColumn Header="Тип" DisplayMemberBinding="{Binding Type}" Width="100"/>
                    <GridViewColumn Header="Статус" DisplayMemberBinding="{Binding Status}" Width="100"/>
                    <GridViewColumn Header="Цена" DisplayMemberBinding="{Binding Price}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <TextBlock Text="Выбрать номер" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="10"/>
        
        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" Margin="10">
            <Button Content="Выбрать номер" Width="150" Height="30" Background="LightCyan" />
        </StackPanel>
    </Grid>
</Window>
